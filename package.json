{
  "name": "whatsapp-ai-agents",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:cloud": "npm run dev -w apps/cloud-backend",
    "dev:local": "npm run dev -w apps/local-agent",
    "build": "npm run build -w packages/shared && npm run build -w apps/cloud-backend && npm run build -w apps/local-agent",
    "deploy": "npm run deploy -w apps/cloud-backend"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
